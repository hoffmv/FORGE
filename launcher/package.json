{
  "name": "forge-launcher",
  "version": "0.1.0",
  "main": "main.js",
  "private": true,
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "devDependencies": {
    "electron": "^31.0.0",
    "electron-builder": "^24.6.0"
  },
  "build": {
    "appId": "com.forge.builder",
    "productName": "FORGE",
    "win": {
      "icon": "icon.png",
      "target": ["nsis"]
    },
    "mac": {
      "icon": "icon.png",
      "category": "public.app-category.developer-tools"
    }
  }
}
